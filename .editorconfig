; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[Makefile]
indent_style = tab

[*]
end_of_line = LF

[*.{hs,lhs}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
